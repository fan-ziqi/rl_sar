        <mu2>0.2</mu2>
        <self_collide>1</self_collide>
        <material>Gazebo/DarkGrey</material>
    </gazebo>
    <gazebo reference="l_foot_pitch">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <self_collide>1</self_collide>
        <kp value="1000000.0"/>
        <kd value="1.0"/>
        <material>Gazebo/DarkGrey</material>
    </gazebo>
    <gazebo reference="l_foot_roll">
        <mu1>1.0</mu1>
